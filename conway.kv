<CustButton@Button>:
    font_size: 32
    background_color: (0.3, 0.3, 1, 0.5)

<UILayout>:
    id: layout
    orientation: "vertical"

    Grid:
        id: grid
        tgl: btn_tgl
        cols: self.cols
        spacing: (1, 1)
        padding: (1, 1)

    Menu:
        id: menu
        orientation: "horizontal"
        size_hint: (1, 0.1)

        CustButton:
            id: btn_random
            text: 'Random'
            on_release: grid.random()

        CustButton:
            id: btn_clear
            text: 'Clear'
            on_release: grid.clear()

        CustButton:
            id: btn_next
            text: 'Next Gen'
            on_release: grid.next_generation()

        ToggleButton:
            id: btn_tgl
            font_size: 32
            background_color: (0.3, 0.3, 1, 0.5)
            text: 'Auto-Run'
            on_state: grid.auto_run()

<GridEntry>:
    font_size: self.height
    background_color: (0.1, 0.1, 0.1, 1)
    size: (10,10)





